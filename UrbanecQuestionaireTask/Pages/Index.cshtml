@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1>Vojtěch Urbanec</h1>
    <h2>AIT2</h2>
</div>


<h1>Credit</h1>
<hr />

@if (Model.Message != string.Empty)
{
    <div class="alert-success p-2">
        <h5>@Model.Message</h5>
    </div>

    <hr />
}

<form method="post" enctype="multipart/form-data">

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="Credit.Value" class="control-label"></label>
                <input asp-for="Credit.Value" class="form-control" type="number" value="1" min="1" max="5" id="creditInput" />
                <span asp-validation-for="Credit.Value" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Credit.Success" class="control-label"></label>
                <input asp-for="Credit.Success" type="checkbox" class="form-check-input" />
                <span asp-validation-for="Credit.Success" class="text-danger"></span>
            </div>

            <button class="btn btn-primary mt-4" type="submit">Odeslat</button>

        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#creditInput').on('input', function () {
                var inputValue = $(this).val();

                if (inputValue < 1 || inputValue > 5) {
                    $(this).addClass('input-error');
                    $(this).next('.text-danger').text('Value must be between 1 and 5.');
                } else {
                    $(this).removeClass('input-error');
                    $(this).next('.text-danger').text('');
                }
            });
        });
    </script>
</form>
